@model AirlineReservationApp.Models.AeroplaneImage

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="page-wrapper">
    <div class="main-page">
        <h2 class="title1">Add new AeroplaneImage</h2>

        <div class="blank-page widget-shadow scroll" id="style-2 div1">


            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="ImageData" class="control-label"></label>
                            <input asp-for="ImageData" class="form-control" />
                            <span asp-validation-for="ImageData" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="AeroplaneId" class="control-label"></label>
                            <select asp-for="AeroplaneId" class="form-control" asp-items="ViewBag.AeroplaneId"></select>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-action="Index" class="hvr-icon-pulse-grow">View existing AaeroplaneImages</a>
            </div>

            @section Scripts {
                @{
                    await Html.RenderPartialAsync("_ValidationScriptsPartial");
                }
            }
        </div>
    </div>
</div>