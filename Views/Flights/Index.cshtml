@model IEnumerable<AirlineReservationApp.Models.Flight>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div id="page-wrapper">
    <div class="main-page">
        <h2 class="title1">List of Flights</h2>
        <div class="blank-page widget-shadow scroll" id="style-2 div1">


            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.DepartureAirport)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ArrivalAirport)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DepartureDateTime)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AircraftType)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SeatingCapacity)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AvailableSeats)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Aeroplane)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.DepartureAirport)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ArrivalAirport)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DepartureDateTime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AircraftType)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SeatingCapacity)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AvailableSeats)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Aeroplane.PlaneID)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.FlightId">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.FlightId">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.FlightId">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <p>
                <a asp-action="Create" class=" fa fa-plus-circle btn-sm">Add New Flight</a>
            </p>
        </div>
    </div>
</div>


