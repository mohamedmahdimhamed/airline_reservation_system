@model AirlineReservationApp.Models.Aeroplane

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div id="page-wrapper">
    <div class="main-page">
        <h2 class="title1">Add new Aeroplane</h2>

        <div class="blank-page widget-shadow scroll" id="style-2 div1">



            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="AeroplaneName" class="control-label"></label>
                            <input asp-for="AeroplaneName" class="form-control" />
                            <span asp-validation-for="AeroplaneName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="SeatingCapacity" class="control-label"></label>
                            <input asp-for="SeatingCapacity" class="form-control" />
                            <span asp-validation-for="SeatingCapacity" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="AirlineCompanyId" >Airline Company</label>
                            <select asp-for="AirlineCompanyId" class="form-control" asp-items="ViewBag.AirlineCompanyName"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="PurchaseDate" class="control-label"></label>
                            <input asp-for="PurchaseDate" class="form-control" />
                            <span asp-validation-for="PurchaseDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Price" class="control-label"></label>
                            <input asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Image" class="control-label"></label>
                            @* <input asp-for="ImageID" class="form-control" /> *@
                            <select asp-for="Image" class="form-control" asp-items="ViewBag.ImageId"></select>
                            <span asp-validation-for="Image" class="text-danger"></span>
                            
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-action="Index" class="hvr-icon-pulse-grow">View existing Aeroplanes</a>
            </div>

           @*  @section Scripts {
                @{
                    await Html.RenderPartialAsync("_ValidationScriptsPartial");
                }
            } *@
        </div>
    </div>
</div>